[Unit]
Description=uWSGI instance to serve myapp
After=network.target

[Service]
User=cyrus
Group=www-data
WorkingDirectory6=/var/www/octaviomateolavagno.com
Environment="PATH=/var/www/octaviomateolavagno.com/venv/bin"
ExecStart=/var/www/octaviomateolavagno.com/venv/bin/uwsgi --ini /var/www/octaviomateolavagno.com/uwsgi.ini
Restart=always
KillSignal=SIGQUIT
Type=notify
NotifyAccess=all

[Install]
WantedBy=multi-user.target
